{
  "name": "reservations-api",
  "version": "2.0.0",
  "description": "Reservations API with GitHub OAuth - Fixed for Render",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "render-build": "node -e \"console.log('Build script ejecutado')\"",

    "test": "cross-env NODE_ENV=test jest --config jest.config.js",
    "test:watch": "cross-env NODE_ENV=test jest --config jest.config.js --watch",
    "test:coverage": "cross-env NODE_ENV=test jest --config jest.config.js --coverage",
    
    "test:properties": "cross-env NODE_ENV=test jest --config jest.config.js tests/properties.test.js",
    "test:vehicles": "cross-env NODE_ENV=test jest --config jest.config.js tests/vehicles.test.js",
    "test:users": "cross-env NODE_ENV=test jest --config jest.config.js tests/users.test.js",
    "test:reservations": "cross-env NODE_ENV=test jest --config jest.config.js tests/reservations.test.js",
    "test:auth": "cross-env NODE_ENV=test jest --config jest.config.js tests/auth.test.js",
    
    "test:all": "cross-env NODE_ENV=test jest --config jest.config.js tests/",
    
    "test:debug": "cross-env NODE_ENV=test jest --config jest.config.js --verbose --runInBand --detectOpenHandles",
    "test:reservations:debug": "cross-env NODE_ENV=test jest --config jest.config.js tests/reservations.test.js --verbose --runInBand --detectOpenHandles"
  },
  "keywords": [
    "nodejs",
    "express",
    "mongodb",
    "oauth",
    "api",
    "render"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "joi": "^17.9.2",
    "mongoose": "^7.5.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.5",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
