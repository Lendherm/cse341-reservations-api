{
  "name": "reservations-api",
  "version": "2.0.0",
  "description": "Reservations API for hotels and transportation - Stay & Go",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node config/seedDatabase.js",
    "test": "jest --setupFiles dotenv/config",
    "test:local": "cross-env NODE_ENV=test jest --runInBand --no-coverage",
    "test:ci": "jest --ci --runInBand --no-coverage --verbose",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test-connection": "node config/testConnection.js",
    "build": "echo 'No build step required'"
  },
  "keywords": [
    "reservations",
    "api",
    "hotels",
    "transportation",
    "mongodb",
    "express",
    "github-oauth",
    "jwt"
  ],
  "author": "Team 3 - Luis De la rosa, Joshua Peter Mostert, Nasibu Saidi",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^3.0.3",
    "connect-mongo": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-session": "^1.18.0",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.3",
    "mongoose": "^7.5.0",
    "passport": "^0.7.0",
    "passport-github2": "^0.1.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.4.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}